<style>
    .pickup-info-block .pickup-box {
    display: flex;
    gap: 10px;
    border: 1px solid #ddd;
    padding: 15px;
    border-radius: 10px;
  }

  .pickup-info-block .pickup-icon {
    font-size: 20px;
  }

  .pickup-info-block .pickup-text p{
    margin-bottom: 9px;
  }

  .pickup-info-block .pickup-text small {
    color: #999;
  }

  .view-store-link {
    display: inline-block;
    color: #000;
    font-size: 14px;
    text-decoration: underline;
    cursor: pointer;
  }

  /* Modal */
  .pickup-modal {
    position: fixed;
    z-index: 9999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    background-color: rgba(0,0,0,0.6);
  }

  .modal-content {
    background-color: #fff;
    margin: auto;
    top: 30vh;
    width: 520px;
    position: relative;
  }

  .modal-upper{
    background-color: #F6F6F6;
    padding: 20px 30px;
    display: flex;
  }

  .modal-upper img{
    max-width: 100px;
  }

  .modal-upper p{
    padding: 37px 20px;
  }

  .modal-lower{
    padding: 20px 30px;
    color: #8a8a8a;
  }

  .modal-lower strong{
    font-size: 18px;
    color: black;
  }

  .modal-lower a{
    text-decoration: underline;
  }

  .modal-content .close-modal {
    position: absolute;
    top: 0px;
    right: 15px;
    font-size: 24px;
    cursor: pointer;
  }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
    const link = document.querySelector(".view-store-link");
    const modal = document.querySelector(".pickup-modal");
    const close = document.querySelector(".close-modal");

    if (link && modal && close) {
      link.addEventListener("click", function (e) {
        e.preventDefault();
        modal.style.display = "block";
      });

      close.addEventListener("click", function () {
        modal.style.display = "none";
      });

      window.addEventListener("click", function (event) {
        if (event.target === modal) {
          modal.style.display = "none";
        }
      });
    }
  });
</script>

