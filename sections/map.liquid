{% schema %}
{
  "name": "Contact Map",
  "tag": "section",
  "class": "contact-map-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Visit Our Store"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Hereâ€™s where you can find us."
    },
    {
      "type": "textarea",
      "id": "iframe_code",
      "label": "Google Map Embed Code",
      "default": "<iframe src=\"https://www.google.com/maps/embed?pb=!1m18...\" width=\"100%\" height=\"400\" style=\"border:0;\" allowfullscreen=\"\" loading=\"lazy\" referrerpolicy=\"no-referrer-when-downgrade\"></iframe>"
    }
  ],
  "presets": [
    {
      "name": "Contact Map",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="contact-map">
  <div class="page-width">
    <div class="map-heading-wrapper">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
    </div>
  </div>
  <div class="map-embed">
    {{ section.settings.iframe_code }}
  </div>
</section>

{% style %}
  .contact-map {
    background-color: #EEF1EA;
  }

  .map-heading-wrapper {
    text-align: center;
    margin-bottom: 30px;
  }

  .map-heading-wrapper h2 {
    font-size: 36px;
    margin-bottom: 10px;
    font-weight: bold;
  }

  .map-heading-wrapper p {
    font-size: 16px;
    color: #777;
  }

  .map-embed iframe {
    width: 100%;
    height: 450px;
    border: 0;
  }

  @media screen and (max-width: 767px) {
    .map-heading-wrapper h2 {
      font-size: 28px;
    }

    .map-heading-wrapper p {
      font-size: 14px;
    }

    .map-embed iframe {
      height: 300px;
    }
  }
{% endstyle %}
